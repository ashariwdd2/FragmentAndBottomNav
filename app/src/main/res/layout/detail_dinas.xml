<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DetailDinas"
    tools:showIn=".layout.detail_dinas">

    <ImageView
        android:id="@+id/logo_detail_dinas"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/nama_dinas_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="start"
        android:layout_marginStart="50dp"
        android:layout_below="@+id/logo_detail_dinas"
        />

    <TextView
        android:id="@+id/desdinas_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:gravity="start"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_below="@+id/nama_dinas_detail"
      />


</RelativeLayout>